<!DOCTYPE html>
<!-- ヘッダー等共通レイアウト -->
<html>
  <head>
    <title>SakeLog</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%# フラッシュの呼び出し %>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>

    <!-- ヘッダーアイコン -->
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <%= link_to root_path, id: "logo" do %>
        <%= image_tag 'SAKELOG-logo.png' %>
        <% end %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
             <li><%= link_to "サインイン", '#' %></li>
             <li><%= link_to "ログイン", '#' %></li>
             <li><%= link_to "新規投稿", '#' %></li>
             <li><%= link_to "アプリについて", '#' %></li>
          </ul>
        </nav>
      </div>
    </header>

    <div class="container">
      <%= yield %>
    </div>

    <%= debug(params) if Rails.env.development? %>

    <!-- アラートの消えるスピード -->
    <script>
      $(function(){
        $(".alert").fadeOut(2000);
      });
    </script>
  </body>
</html>
