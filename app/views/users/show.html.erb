<div class="container">
  <div class="row profile-area">
    <div class="col-md-4 profile-name">
        <div class="user-image">
          <% if @user.image? %>
              <%= image_tag @user.image.url %>
          <% else %>
              <%= image_tag 'default.png' %>
          <% end %>
        </div>
        <h3>
          <%= @user.name %>
        </h3>
        <% if current_user?(@user)%>
          <%= link_to  edit_user_path(current_user) do %>
          <i class="fas fa-cog fa-lg"></i>
          <% end %>
          <%= link_to  logout_path, method: :delete, data: {confirm: "ログアウトしますか？"}  do %>
          <i class="fas fa-sign-out-alt fa-lg"></i>
          <% end %>
        <% end %>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
        <%= render 'follow_form' if logged_in? %>
    </div>

    <div class="col-md-8 profile-stats">
      <div class="profile-numbers">
        <h4>
          <i class="far fa-image"></i> 投稿
          <strong>
            <%= @user.microposts.count %>
          </strong>
          　
        </h4>
        <h4>
          <% if current_user? @user %>
            <%= link_to bookmarks_microposts_path do %>
              <i class="far fa-bookmark"></i> ブックマーク
              <strong id="bookmarks">
                <%= @user.bookmark_microposts.count %>
              </strong>
            <% end %>
          <% end %>
        </h4>
      </div>
      <section class="introduction">
        <%= @user.introduction %>
      </section>
    </div>

  </div>

  <div class="row">
      <% if @user.microposts.any? %>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      <% end %>
  </div>
</div>
