<div class="container">
  <div class="row profile-area">
    <div class="col-md-8 col-md-offset-2">
      <div class="row">
        <div class="col-md-6 profile-name">
            <div class="user-image">
              <% if @user.image? %>
                  <%= image_tag @user.image.url %>
              <% else %>
                  <%= image_tag 'default.png' %>
              <% end %>
            </div>
            <h3>
              <%= @user.name %>
            </h3>
            <% if current_user?(@user)%>
              <%= link_to  edit_user_path(current_user) do %>
              <i class="fas fa-cog fa-lg"></i>
              <% end %>
              <%= link_to  logout_path, method: :delete, data: {confirm: "ログアウトしますか？"}  do %>
              <i class="fas fa-sign-out-alt fa-lg"></i>
              <% end %>
            <% end %>
            <section class="stats">
              <%= render 'shared/stats' %>
            </section>
            <%= render 'follow_form' if logged_in? %>
        </div>

        <div class="col-md-6 profile-stats">
          <div class="profile-numbers">
            <h4>
              <i class="far fa-image"></i> 投稿
              <strong>
                <%= @user.microposts.count %>
              </strong>
              　
            </h4>
            <h4>
              <% if current_user? @user %>
                <%= link_to bookmarks_microposts_path do %>
                  <i class="far fa-bookmark"></i> ブックマーク
                  <strong id="bookmarks">
                    <%= @user.bookmark_microposts.count %>
                  </strong>
                <% end %>
              <% end %>
            </h4>
          </div>
          <section class="introduction">
            <%= @user.introduction %>
          </section>
        </div>
      </div>
    </div>
  </div>


  <div class="post-show-area row">

    <div>
      <ul class="nav nav-tabs col-md-8 col-md-offset-2" role="tablist">
        <li class="active" role="presentation">
          <a aria-controls="tab_a" data-toggle="tab" href="#tab_a" role="tab">自分の投稿</a>
        </li>
        <li role="presentation">
          <a aria-controls="tab_b" data-toggle="tab" href="#tab_b" role="tab">お気に入り</a>
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="tab_a" role="tabpanel">
          <div class="col-md-8 col-md-offset-2 micropost-index">

            <% if @user.microposts.any? %>
              <ol class="microposts">
                <%= render @microposts %>
              </ol>
              <%= will_paginate @microposts %>
            <% end %>

          </div>
        </div>
        <div class="tab-pane" id="tab_b" role="tabpanel">
          <div class="col-md-8 col-md-offset-2 micropost-index">

            <% if @user.bookmark_microposts.any? %>
              <ol class="microposts">
                <%= render @favorites %>
              </ol>
              <%= will_paginate @favorites %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
