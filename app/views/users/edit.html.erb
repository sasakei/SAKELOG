<% provide(:button_text, '保存') %>
<% provide(:path, user_path(current_user)) %>

<div class="container">
  <div class="row">
  <h1>プロフィール設定</h1>
    <%= form_for(@user, url: user_path(current_user)) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="col-md-6 col-md-offset-3">

      <%= f.label :image, '写真' , class:'col-form-label' %>
      <%= f.file_field :image, accept: 'image/jpeg,image/jpg,image/png' %>

      <%= f.label :name, '名前' %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :introduction, 'プロフィール' %>
      <%= f.text_area :introduction, rows: 10, class: 'form-control', placeholder: "例：甘口・濃口が好みです。" %>

      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, 'パスワード(確認)' %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>
