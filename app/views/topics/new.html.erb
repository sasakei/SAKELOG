<!-- 新規投稿 -->


<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Picture</h1>
        <%= form_for @topic do |f| %>

          <%# 画像投稿フォーム %>
          <div class="form-group">
            <%= f.label :"写真" , class:'col-md-3 col-form-label' %>
            <%= f.file_field :image%>
          </div>

          <div class="form-group" id="star">
              <%= f.label :rate,"評価" , class:'col-md-3 col-form-label' %>
              <%= f.hidden_field :rate, id: :review_star %>
          </div>

          <script>
            $('#star').raty({
              size     : 36,
              starOff: "<%= asset_path('star-off.png') %>",
              starOn : "<%= asset_path('star-on.png') %>",
              scoreName: 'topic[rate]'
            });
          </script>

          <!-- 投稿文フォーム -->

          <div class="form-group">
            <%= f.label :"レビュー" , class:'col-md-3 col-form-label' %>
            <%= f.text_area :description, class:'col-md-3 form-control' %>
          </div>

          <%# 投稿ボタン %>
          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
        <% end %>



      </div>
    </div>
  </div>
</div>
