<!-- 投稿一覧 -->
<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">

            <!-- 投稿ユーザー名 -->
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>

            <%# 投稿画像 %>
            <%= image_tag topic.image.url %>

            <%# ログインユーザーのfavに含まれていれば %>
            <ul>
            <li>
            <% if !topic.favorite_users.include?(current_user) %>
            <%# ハートアイコンをfavorite#createへのリンクに %>
              <%= link_to favorites_path(topic_id: topic.id),:style=>"color:red;", method: :post do %>
                <i class="far fa-heart fa-2x fa-fw　add"></i>
              <% end %>

              <%# favに含まれていたら %>
              <% else %>
              <%# ハートアイコンをfavorite#destroyへのリンクに %>
              <%# <%= link_to /favorites/destroy(topic_id: topic.id),:style=>"color:red;", method: :delete %> %>
              <i class="fas fa-heart fa-2x fa-fw added"></i>
            <% end %>
            </li>
            <!-- コメントアイコン -->
            <li>
            <i class="far fa-comments fa-2x fa-fw"></i>
            </li>
            </ul>
            <!-- ユーザー名 -->
            <p class="topic-author">
              <%= topic.user.name %>
            </p>
            <!-- 投稿文 -->
            <p class="topic-text">
              <%= topic.description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
