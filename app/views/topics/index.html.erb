<!-- 投稿一覧 -->
<div class="topic-index-wrapper">
  <div class="container">
    <div class="row">
      <% @topics.each do |topic| %>
        <div class="col-md-3 col-md-offset-2">
          <div class="topic-index-single">
              <%= link_to topic_path(id: topic.id) do %>
              <%# 投稿画像 %>
              <%= image_tag topic.image.url %>
              <% end %>
                <%#ログインユーザーのfavに含まれていれば  %>
                <% if !topic.favorite_users.include?(current_user) %>
                  <div class="bookmark">
                    <%# ハートアイコンをfavorite#createへのリンクに %>
                    <%= link_to favorites_path(topic_id: topic.id),:style=>"color:red;", method: :post do %>
                      <i class="far fa-bookmark fa-2x fa-fw　add"></i>
                    <% end %>
                  </div>
              <%# favに含まれていたらハートアイコンをfavorite#destroyへのリンクに %>
                <% else %>
                    <div class="bookmark">
                    <%= link_to favorites_path(topic_id: topic.id),:style=>"color:red;", method: :delete do %>
                      <i class="fas fa-bookmark fa-2x fa-fw added"></i>
                    <% end %>
                    </div>
                <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
