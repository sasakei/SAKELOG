<div class="container">
  <div class="row">
    <div class="col-md-6 post-image">
      <%= image_tag @micropost.image.url %>
    </div>
    <div class="col-md-6 post-status" id="micropost-<%= @micropost.id %>">
      <h4 class="user">
        <%= image_tag @user.image.url %>
        <%= link_to @micropost.user.name, @micropost.user %>
      </h4>
      <p class="title">お酒の名前：<%= @micropost.title %></p>
      <p class="content">
        レビュー：<%= @micropost.content %>
      </p>
      <p class="timestamp">
        Posted:<%= time_ago_in_words(@micropost.created_at) %> ago.
      </p>

      <div id="bookmark_btn_<%= @micropost.id %>">
        <% if !@micropost.bookmark_by?(@user) %>
          <%= render 'bookmark' %>
        <% else %>
          <%= render 'unbookmark' %>
        <% end %>
      </div>

      <div>
        <% if current_user?(@micropost.user) %>
          <%= link_to @micropost, method: :delete,
                  data: { confirm: "この投稿を削除しますか？" } do%>
          <i class="far fa-trash-alt fa-2x"></i>
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>
