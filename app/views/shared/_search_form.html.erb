<%= search_form_for @q do |f| %>

  <%= f.label :'テイスト', class:'col-form-label' %>
  <%= f.select :taste_eq,
      [["甘口", "甘口"],
      ["やや甘口", "やや甘口"],
      ["中口", "中口"],
      ["やや辛口", "やや辛口"],
      ["辛口", "辛口"]],
      include_blank: "選択して下さい"
  %>


  <%= f.label :'フレーバー',  class:'col-form-label',　id: 'micropost_taste' %>
  <%= f.select :flavor_eq,
      [["芳醇", "芳醇"],
      ["やや芳醇", "やや芳醇"],
      ["中口", "中口"],
      ["やや淡麗", "やや淡麗"],
      ["淡麗", "淡麗"]],
      include_blank: "選択して下さい"
  %>

  <%= f.submit "検索" %>

<% end %>
